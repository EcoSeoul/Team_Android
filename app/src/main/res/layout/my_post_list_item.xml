<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/my_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:textSize="13sp"
                tools:text="여기는 제목임"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/notosanscjkkr_medium"/>


        </LinearLayout>

        <TextView
            android:id="@+id/my_post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#707070"
            android:textSize="13sp"
            tools:text="여기는 내용임ㅎㅎㅎㅎㅎㅎ"
            android:maxLines="2"
            android:layout_marginRight="104dp"
            android:fontFamily="@font/notosanscjkkr_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/my_post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09/21"
                android:textColor="#A3A3A3"
                android:textSize="13sp"
                android:fontFamily="@font/notosanscjkkr_regular"/>


            <LinearLayout
                android:layout_width="283dp"
                android:layout_height="match_parent"
                android:layout_marginRight="14dp"
                android:gravity="right">

                <ImageButton
                    android:id="@+id/mypost_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/community_recommendation_color" />

                <TextView
                    android:id="@+id/my_post_likeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="1"
                    android:textColor="#707070"
                    android:textSize="13sp" />

                <ImageButton
                    android:id="@+id/com_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/community_chat" />

                <TextView
                    android:id="@+id/my_post_cmtCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="5"
                    android:textColor="#707070"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="351dp"
            android:layout_height="1dp"
            android:background="#E6E6E6"
            android:layout_marginTop="12.5dp"/>

    </LinearLayout>

</LinearLayout>