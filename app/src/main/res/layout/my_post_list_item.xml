<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="26dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:textColor="#343434"
                android:textSize="13sp"
                tools:text="여기는 제목임"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/notosanscjkkr_medium"/>


        </LinearLayout>

        <TextView
            android:id="@+id/image_comment_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#707070"
            android:textSize="13sp"
            tools:text="여기는 내용임ㅎㅎㅎㅎㅎㅎ안녕하세여 두줄 까지 가능 할 듯ㅋㅋ ㅎ하하히히히히하"
            android:maxLines="2"
            android:minHeight="43dp"
            android:layout_marginRight="104dp"
            android:fontFamily="@font/notosanscjkkr_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09/21"
                android:textColor="#A3A3A3"
                android:textSize="13sp"
                android:fontFamily="@font/notosanscjkkr_regular"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_marginRight="14dp">

                <ImageButton
                    android:id="@+id/com_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/community_recommendation_color" />

                <TextView
                    android:id="@+id/com_likeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:text="1"
                    android:textSize="13sp"
                    android:textColor="#707070"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>

                <ImageButton
                    android:id="@+id/com_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/community_chat"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:id="@+id/com_commentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:text="5"
                    android:textSize="13sp"
                    android:textColor="#707070"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="351dp"
            android:layout_height="1dp"
            android:background="#E6E6E6"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12.5dp"/>

    </LinearLayout>

</LinearLayout>