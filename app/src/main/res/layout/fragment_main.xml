<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/barcode_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <TextView
                android:layout_marginLeft="23dp"
                android:id="@+id/home_mileage_text"
                android:text="에코 마일리지 50000"
                android:textSize="15dp"
                android:textColor="#707070"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:background="@drawable/home_mileage"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/home_mileage_text"
                android:layout_width="14dp"
                android:layout_height="14dp" />

            <ImageView
                android:id="@+id/home_barcode_image"
                android:layout_width="35dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/main_banner_pager"
            android:layout_width="match_parent"
            android:layout_height="208dp">

        </android.support.v4.view.ViewPager>

        <android.support.v7.app.AlertController.RecycleListView
            android:id="@+id/expand_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.app.AlertController.RecycleListView>


    </LinearLayout>

</ScrollView>