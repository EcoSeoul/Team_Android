<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/community_gold"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="9dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="11dp"
                android:textColor="#343434"
                android:textSize="17sp"
                tools:text="제목은 이것" />


        </LinearLayout>

        <TextView
            android:id="@+id/image_comment_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#707070"
            android:textSize="15sp"
            tools:text="안녕하세여ㅕ아녕안뇽안녀엉"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="3dp"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="4dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09/21"
                android:textColor="#A3A3A3"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="랄랄랄"
                android:textSize="15sp"
                android:textColor="#A3A3A3"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_marginRight="14dp">

                <ImageButton
                    android:id="@+id/com_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/community_recommendation_color" />

                <TextView
                    android:id="@+id/com_likeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:text="1"
                    android:textSize="13sp"
                    android:textColor="#707070"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>

                <ImageButton
                    android:id="@+id/com_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/community_chat"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:id="@+id/com_commentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:text="5"
                    android:textSize="13sp"
                    android:textColor="#707070"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="351dp"
            android:layout_height="1dp"
            android:background="#E6E6E6"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12.5dp"/>

    </LinearLayout>

</LinearLayout>