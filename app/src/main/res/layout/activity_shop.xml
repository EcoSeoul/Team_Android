<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shop.ShopActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/shop_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:background="#FFFFFF"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품 신청하기"
                android:textColor="#343434"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:fontFamily="@font/notosanscjkkr_medium"/>

            <ImageButton
                android:id="@+id/com_write_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:background="@drawable/ic_mypage"
                android:layout_marginTop="5dp"/>

        </FrameLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shop_tmoney"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="41.28dp"
                    android:text="티머니 충전권"
                    android:textColor="#343434"
                    android:textSize="12sp"
                    android:background="#F2F2F2"
                    android:layout_marginRight="2.4dp"
                    android:fontFamily="@font/notosanscjkkr_regular"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shop_apti"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="41.28dp"
                    android:text="아파트 관리비"
                    android:textColor="#343434"
                    android:textSize="12sp"
                    android:background="#F2F2F2"
                    android:layout_marginRight="2.4dp"
                    android:fontFamily="@font/notosanscjkkr_regular"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shop_market_voucher"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="41.28dp"
                    android:text="전통시장 온누리 상품권"
                    android:textColor="#343434"
                    android:textSize="12sp"
                    android:background="#F2F2F2"
                    android:layout_marginRight="2.4dp"
                    android:fontFamily="@font/notosanscjkkr_regular"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shop_stand"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="41.28dp"
                    android:text="LED 스탠드"
                    android:textColor="#343434"
                    android:textSize="12sp"
                    android:background="#F2F2F2"
                    android:layout_marginRight="2.4dp"
                    android:fontFamily="@font/notosanscjkkr_regular"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shop_tent"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="41.28dp"
                    android:text="실내 보온 텐트"
                    android:textColor="#343434"
                    android:textSize="12sp"
                    android:background="#F2F2F2"
                    android:layout_marginRight="2.4dp"
                    android:fontFamily="@font/notosanscjkkr_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shop_cash"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="41.28dp"
                android:text="현금 전환"
                android:textColor="#343434"
                android:textSize="12sp"
                android:background="#F2F2F2"
                android:layout_marginLeft="2.4dp"
                android:fontFamily="@font/notosanscjkkr_regular"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shop_socket"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="41.28dp"
                android:text="인공지능 자동절전 콘센트"
                android:textColor="#343434"
                android:textSize="12sp"
                android:background="#F2F2F2"
                android:layout_marginRight="2.4dp"
                android:fontFamily="@font/notosanscjkkr_regular"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shop_culture_voucher"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="41.28dp"
                android:text="모바일 문화상품권"
                android:textColor="#343434"
                android:textSize="12sp"
                android:background="#F2F2F2"
                android:layout_marginRight="2.4dp"
                android:fontFamily="@font/notosanscjkkr_regular"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shop_tumbler"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="41.28dp"
                android:text="최고급 텀블러"
                android:textColor="#343434"
                android:textSize="12sp"
                android:background="#F2F2F2"
                android:layout_marginRight="2.4dp"
                android:fontFamily="@font/notosanscjkkr_regular"/>

        </LinearLayout>


    </LinearLayout>

    </ScrollView>

</LinearLayout>