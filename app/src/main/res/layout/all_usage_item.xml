<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/all_item_usage_image"
        android:layout_marginLeft="9dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/home_all_graph" />

    <TextView
        android:id="@+id/all_item_month_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@+id/all_item_usage_image"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"
        android:text="2018.04.10 ~ 2018.08.10"
        android:textColor="#343434"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/all_item_dot_image"
        android:background="@drawable/home_all_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/all_item_usage_image"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/all_item_usage_text"
        android:text="230 kgCO2"
        android:textColor="#343434"
        android:textSize="18sp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:layout_below="@+id/all_item_month_text"
        android:layout_alignLeft="@+id/all_item_month_text"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/all_linear"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/all_item_usage_text"
        android:layout_below="@+id/all_item_usage_text"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/all_item_arrow_image"
            android:layout_width="14dp"
            android:layout_height="8dp"
            android:background="@drawable/percentage_down"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/all_item_percentage_text"
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:text="10%"
            android:textSize="15sp"
            android:textColor="#26D07C"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작년대비"
            android:textSize="15sp"
            android:textColor="#343434"
            android:fontFamily="@font/notosanscjkkr_light"
            android:includeFontPadding="false"
            android:layout_marginLeft="17dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/all_item_ment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작년보다 70%를 절약한 당신 최고에요!"
        android:textSize="15sp"
        android:textColor="#55595D"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"
        android:layout_below="@+id/all_linear"
        android:layout_alignLeft="@+id/all_item_usage_text"
        android:layout_marginTop="7dp"/>

</RelativeLayout>