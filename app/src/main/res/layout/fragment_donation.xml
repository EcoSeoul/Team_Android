<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <FrameLayout
        android:layout_weight="61"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/donation_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/donation_1_banner"/>

        <LinearLayout
            android:id="@+id/donation_image_detail_button"
            android:layout_gravity="right|bottom"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="바로가기"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:background="@drawable/arrow_right_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="52"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        
        <LinearLayout
            android:layout_weight="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_marginLeft="13dp"
                android:id="@+id/donation_icon_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/donation_tree"/>

            <TextView
                android:id="@+id/donation_title_text"
                android:text="사막화 방지를 위한 나무 기부"
                android:textColor="#343434"
                android:textSize="17dp"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4sp"/>
            
        </LinearLayout>
        
        <TextView
            android:id="@+id/donation_explain_text"
            android:text="사막화 황사를"
            android:textSize="12sp"
            android:textColor="#343434"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/donation_text_background"
            android:scrollbars="vertical"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_height="0dp">

            <Spinner
                android:id="@+id/donation_cost_spinner"
                android:background="@drawable/donation_spinner_background"
                android:layout_gravity="center_vertical"
                android:layout_weight="10.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="19dp">

            </Spinner>

            <View
                android:visibility="invisible"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_weight="6.1"
                android:id="@+id/donation_donate_button"
                android:text="기부하기"
                android:textColor="#26D07C"
                android:textSize="17sp"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:background="@drawable/donation_button_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="19dp"
                />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>