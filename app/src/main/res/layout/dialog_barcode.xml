<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="327dp"
    android:layout_height="283dp"
    android:orientation="vertical"
    android:background="@drawable/dialog_style1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <View
        android:layout_width="69dp"
        android:layout_height="1dp"
        android:background="#707070"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="34.5dp"/>

    <TextView
        android:id="@+id/dialog_barcode_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최윤정님 에코머니"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="9.5dp"
        android:layout_marginRight="9.5dp"
        android:fontFamily="@font/helveticaneue_thin"/>

    <View
        android:layout_width="69dp"
        android:layout_height="1dp"
        android:background="#707070"
        android:layout_marginRight="15dp"
        android:layout_marginTop="34.5dp"/>

    </LinearLayout>


        <TextView
            android:id="@+id/dialog_barcode_mileage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="56,000 P"
            android:textColor="#000"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/helveticaneue_thin"/>
    
    <ImageView
        android:id="@+id/dialog_barcode_image"
        android:layout_width="275dp"
        android:layout_height="127dp"
        android:layout_marginTop="27dp"
        android:layout_gravity="center_horizontal"
        />


</LinearLayout>