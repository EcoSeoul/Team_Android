<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:orientation="vertical"
    android:background="#fff">

    <!-- 비율 안 맞음, 카드번호 입력 에딛텍스트 안에 글 수정해야함,
         카드 이미지 잘라야함, 확인 버튼 스타일 만들어야함, 밑줄-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="에코머니 카드\n등록하기"
            android:textColor="#000000"
            android:textSize="34sp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="23dp"
            android:lineSpacingExtra="-2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카드로 많은 혜택을 받아보세요!"
            android:textColor="#343434"
            android:textSize="15sp"
            android:fontFamily="@font/notosanscjkkr_light"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/registration_card"
            android:layout_marginTop="40dp" />


    </LinearLayout>


    </LinearLayout>

    <Spinner
        android:id="@+id/card_spinner"
        android:layout_width="301dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        android:background="@drawable/spinner_spinner">


    </Spinner>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/registration_next"
        android:layout_gravity="center"
        android:layout_marginTop="12.71dp"/>

    <EditText
        android:layout_width="301dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="12.71dp"
        android:background="@drawable/card_edit_style"
        android:hint="카드 번호를 입력해주세요!"
        android:textColorHint="#343434"
        />
    
    <Button
        android:layout_width="97dp"
        android:layout_height="43dp"
        android:background="@drawable/exchange_btn_style"
        android:layout_gravity="center"
        android:layout_marginTop="39dp"
        android:text="확인!"
        android:textColor="#26D07C"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#A3A3A3"
        android:text="@string/card"
        android:layout_gravity="right"
        android:layout_marginTop="17dp"
        android:layout_marginRight="32dp"
        android:textSize="12sp"
        android:fontFamily="@font/notosanscjkkr_light"
        android:lineSpacingExtra="-2dp"
        android:gravity="center"/>


</LinearLayout>