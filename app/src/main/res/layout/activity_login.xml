<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eco.ecoseoul.home.view.LoginActivity"
    android:clipChildren="false"
    android:background="#FFFFFF">

    <TextView
        android:text="ECOSEOUL"
        android:textSize="20dp"
        android:textColor="#343434"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"
        android:layout_marginTop="33dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"/>
    <TextView
        android:text="절약의,"
        android:textSize="30dp"
        android:textColor="#343434"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:layout_marginLeft="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="절약에 의한,"
        android:textSize="30dp"
        android:textColor="#343434"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:layout_marginLeft="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="절약을 위한,"
        android:textSize="30dp"
        android:textColor="#343434"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:layout_marginLeft="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/login_id_edit"
        android:textColor="#A3A3A3"
        android:textSize="20dp"
        android:hint="아이디"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"
        android:paddingLeft="25dp"
        android:textColorHint="#A3A3A3"
        android:background="@drawable/login_shape"
        android:layout_gravity="center"
        android:layout_width="313dp"
        android:layout_height="44dp" />

    <EditText
        android:id="@+id/login_pw_edit"
        android:hint="비밀번호"
        android:background="@drawable/login_shape"
        android:textColor="#A3A3A3"
        android:textColorHint="#A3A3A3"
        android:textSize="20dp"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"
        android:paddingLeft="25dp"
        android:layout_marginTop="13dp"
        android:layout_gravity="center"
        android:layout_width="313dp"
        android:layout_height="44dp" />

    <Button
        android:id="@+id/login_login_button"
        android:background="@drawable/login_login"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:layout_width="313dp"
        android:layout_height="44dp" />

    <ImageView
        android:paddingTop="50dp"
        android:layout_width="293dp"
        android:layout_height="170dp"
        android:layout_gravity="bottom"
        android:background="@drawable/login_character"
        />
</LinearLayout>
